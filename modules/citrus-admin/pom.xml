    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-test</artifactId>
      <scope>compile</scope>
    </dependency>
    
    <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-log4j12</artifactId>
    </dependency>
    <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>jcl-over-slf4j</artifactId>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
      </plugin>

      <plugin>
        <groupId>com.github.searls</groupId>
        <artifactId>jasmine-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>test</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <debug>true</debug>
          <keepServerAlive>true</keepServerAlive>
          <specRunnerTemplate>REQUIRE_JS</specRunnerTemplate>
          <jsSrcDir>${project.basedir}/src/main/webapp/javascript</jsSrcDir>
          <customRunnerConfiguration>${project.basedir}/src/test/javascript/runner.configuration</customRunnerConfiguration>
          <junitXmlReportFileName>../surefire-reports/TEST-JasmineSuite.xml</junitXmlReportFileName>
          <srcDirectoryName>javascript</srcDirectoryName>
          <preloadSources>
            <source>javascript/support/jquery.js</source>
            <source>javascript/support/jquery-ui.js</source>
            <source>javascript/support/jqueryFileTree.js</source>
            <source>javascript/support/underscore.js</source>
            <source>javascript/support/backbone.js</source>
            <source>javascript/support/handlebars.js</source>
            <source>javascript/support/moment.js</source>
            <source>javascript/support/bootstrap.js</source>
            <source>javascript/templates/TemplateHelper.js</source>
            <source>javascript/citrus-admin-util.js</source>
            <source>support/require.js</source>
            <source>support/jasmine-jquery.js</source>
            <source>support/sinon.js</source>
          </preloadSources>
          <specIncludes>
            <include>javascripts/helpers/SpecHelper.js</include>
            <include>javascripts/*.js</include>
          </specIncludes>
          <timeout>30</timeout>
        </configuration>
        <dependencies>
          <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-htmlunit-driver</artifactId>
            <version>2.32.0</version>
          </dependency>
          <dependency>
            <groupId>net.sourceforge.htmlunit</groupId>
            <artifactId>htmlunit</artifactId>
            <version>2.12</version>
          </dependency>
        </dependencies>
      </plugin>
      
      <plugin>
        <groupId>com.github.timurstrekalov</groupId>
        <artifactId>saga-maven-plugin</artifactId>
        <version>1.5.4</version>
        <executions>
          <execution>
            <goals>
              <goal>coverage</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <baseDir>http://localhost:${jasmine.serverPort}</baseDir>
          <outputDir>${project.build.directory}/coverage</outputDir>
          <noInstrumentPatterns>
            <pattern>.*/spec/.*</pattern> <!-- Don't instrument specs -->
            <pattern>.*/support/.*</pattern> <!-- Don't instrument 3rd party support libs -->
          </noInstrumentPatterns>
        </configuration>
      </plugin>

      <plugin>
          <groupId>org.eclipse.jetty</groupId>
          <artifactId>jetty-maven-plugin</artifactId>
          <configuration>
              <webAppConfig>
                  <contextPath>/citrus-admin</contextPath>
              </webAppConfig>
              <httpConnector>
                <port>${citrus.serverPort}</port>
                <idleTimeout>60000</idleTimeout>
              </httpConnector>
              <stopPort>${citrus.stopPort}</stopPort>
              <stopKey>stop</stopKey>
              <scanIntervalSeconds>5</scanIntervalSeconds>
              <systemProperties>
                  <systemProperty>
                    <name>file.encoding</name>
                    <value>${project.build.sourceEncoding}</value>
                  </systemProperty>
                  <systemProperty>
                    <name>file.encoding</name>
                    <value>${project.build.sourceEncoding}</value>
                  </systemProperty>
                  <systemProperty>
                    <name>log4j.configuration</name>
                    <value>log4j.xml</value>
                  </systemProperty>
                  <systemProperty>
                    <name>project.home</name>
                    <value>../citrus-integration</value>
                  </systemProperty>
                  <systemProperty>
                    <name>test.base.package</name>
                    <value>com.consol.citrus</value>
                  </systemProperty>
              </systemProperties>
          </configuration>
        </plugin>
    </plugins>
  </build>
  
</project>
